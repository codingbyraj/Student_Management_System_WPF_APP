<Window x:Class="StudentApplication.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentApplication"
        mc:Ignorable="d"
        Title="Login Successfully" Height="150" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid>
            <Image Name="UserImage" Height="70" Width="70" />
            <TextBlock Margin="10 10 0 0" VerticalAlignment="Top" HorizontalAlignment="Left">                
                    You Logged in as
            </TextBlock>
            <Image Source="{StaticResource ImagePath}" Width="50" Margin="122,5,122,71"/>
        </Grid>
        <Grid Background="WhiteSmoke" VerticalAlignment="Bottom" 
                                  Margin="5,5,5,5" Height="Auto">

            <Button Name="btnOk" Content="Ok" HorizontalAlignment="Right" VerticalAlignment="Bottom"  
                Background="Green" Foreground="WhiteSmoke" 
                FontFamily="Arial" FontWeight="Normal" 
                Height="24" Width="75"/>

        </Grid>
    </Grid>
</Window>
